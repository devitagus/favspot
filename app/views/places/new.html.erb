<h1>Places#new</h1>
<p>Find me in app/views/places/new.html.erb</p>




<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Add a place</h1>
      <div class="panel panel-default">
        <div class="panel-body">


          <%= form_tag(new_place_path,  method: :get, class: 'form-horizontal') do |f| %>
            <div class="col-xs-8">
            <%= text_field_tag :place, '', class: 'form-control', placeholder: 'Search for a place' %>
          </div>
          <div class="col-xs-4">

            <%= button_tag(type: "submit", class: "btn btn-info") do %>
              Go
              <i class="fa fa-search"></i>
            <% end %>
</div>

          <% end %>



        <% if params[:place] %>
        <h2><%= @spot.name %></h2>
              <h6>Rating</h6>
              <%= @spot.rating %>
              <hr>
              <h6>Picture</h6>
              <%if @spot.photos.empty? %>
              <p>No pictures yet</p>
              <% else %>
              <%= image_tag @spot.photos[0].fetch_url(1500), width: '500' %>
              <% end %>
              <hr>
              <h6>Address</h6>
              <%= @spot.formatted_address %>
              <hr>
              <h6>City</h6>
              <%= @spot.city %>

              <hr>
              <h6>Categories</h6>
              <% @spot.types.each do |type| %>
              <ul>
              <li><%= type %></li>
              </ul>
              <% end %>
              <hr>
              <h6>Price range</h6>
              <%= @spot.price_level %>
              <hr>
              <h6>Phone number</h6>
              <%= @spot.formatted_phone_number %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>




  <div class="row">
    <div class="col-md-6 col-md-offset-3">



      <div class="panel panel-default">
        <div class="panel-heading">
          Search and save a new place
        </div>
        <div class="panel-body">

            <%= form_for @place, html: {multipart: true, class: "formflat"} do |f| %>


                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Place</label>
                     <%= f.text_field :name, placeholder: "Type the name of the place", class: "form-control" %>
                  </div>
                </div>


                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Address</label>
                    <%= f.text_field :address, class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>City</label>
                    <%= f.text_field :city, class: "form-control" %>
                  </div>
                </div>

