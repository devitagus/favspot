<h1>Places#new</h1>
<p>Find me in app/views/places/new.html.erb</p>




<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-offset-3">
      <h1>Add a place</h1>
        <%= form_tag(new_place_path,  method: :get, class: 'form-inline') do |f| %>

          <%= text_field_tag :place, '', class: 'form-control', placeholder: 'Search for a place' %>


            <%= button_tag(type: "submit", class: "btn btn-info") do %>Go<i class="fa fa-search"></i>
            <% end %>

        <% end %>

      <div class="row">
        <div class="placecard">
          <div class="col-left">
            <%if @place.photos.nil? || @place.photos.empty?  %><p>No picture yet</p>

            <% else %>

              <%= image_tag @place.photos[0].fetch_url(1500), class: "img-responsive" %>
              <% end %>
          </div>

          <div class="col-right">
            <h5><%= @place.name %> | <%= @place.city %></h5>
            <p><%= @place.address %></p>
            <p>Rating: <%= @place.rating %></p>
            <p>
              <ul class="list-inline">
                <% @place.categories.each do |cat| %>
                  <li><%= cat %></li>
                <% end %>
              </ul>
            </p>
          </div>
        </div>
      </div>

      <div class="row">
        <% if params[:place] %>
        <h2><%= @place.name %></h2>
              <h6>Rating</h6>
              <%= @place.rating %>
              <hr>
              <h6>Picture</h6>
              <%if @place.photos.nil? || @place.photos.empty?  %>
              <p>No pictures yet</p>
              <% else %>
              <%= image_tag @place.photos[0].fetch_url(1500), width: '500' %>
              <% end %>
              <hr>
              <h6>Address</h6>
              <%= @place.address %>
              <hr>
              <h6>City</h6>
              <%= @place.city %>

              <hr>
              <h6>Categories</h6>
              <% @place.categories.each do |cat| %>
              <ul>
              <li><%= cat %></li>
              </ul>
              <% end %>

              <hr>
              <h6>Phone number</h6>
              <%= @place.phone %>
              </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>




  <div class="row">
