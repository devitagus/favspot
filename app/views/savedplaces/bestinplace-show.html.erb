<div class="container">
  <div class="col-lg-6 col-md-offset-3">

    <div class="row">
    <h1><%= @savedplace.place.name %></h1>

    </div>

<!-- show-place -->
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">

      <h4 class = "headline"><%= best_in_place @savedplace, :headline, :as => :input, place_holder: "Add a catchy headline" %></h4>
      <p class = "notop small">By <%= @savedplace.user.email %> added on <%= @savedplace.created_at %></p>

       <% if @savedplace.place.photos.nil? || @savedplace.place.photos.empty? %><p>No picture yet</p>
        <% else %>
          <%= image_tag @savedplace.place.photos[0].fetch_url(1500), class: "img-responsive" %>
        <% end %>

       <br>

       <%= render 'shared/editsavedplace' %>

       <%= best_in_place @savedplace, :tag, :as => :input, classes:"form-control", place_holder: "Add tags"%><br>

       <%= best_in_place @savedplace, :tip, :as => :input, classes:"form-control", place_holder: "Add your notes and tips about this place"%><br>

       <br>

       <p><%= @savedplace.place.address %></p>

       <!-- Tokenfield gem -->
       <!-- <input type="text" class="form-control" id="tokenfield" value="red,green,blue" /> -->




        <!-- Best in place edit associated table -->

        <%# if @savedplace.usertips.empty? %>
        <%#= best_in_place [@savedplace, @usertip], :tip, :type => :input, place_holder: "Add a tip", :url => "savedplace_usertip_path" %>

        <%# else %>

       <%# @savedplace.usertips.each do |usertip| %>
       <%#= best_in_place [@savedplace, usertip], :tip, :type => :input, place_holder: "Add a tip" %>
       <%# end %>
       <%# end %>




        <%#= form_for [@savedplace] do |f| %>
          <%#= f.label :headline %>
          <%#= f.text_field :headline%>
          <%#= f.submit "Submit" %>
        <%#end %>






      </div>
    </div>
  </div>
 </div>
</div>


