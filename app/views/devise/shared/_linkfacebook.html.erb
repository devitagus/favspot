<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" do %><i class="fa fa-facebook-official icon-md"></i> <%= "#{provider.to_s.titleize}" %> Sign in <% end %><br />
  <% end -%>
<% end -%>
